<%= link_to pending_account_bets_path do %>
<div class="invitation-banner">
  <h3>Your bet invitations &nbsp; <%= image_tag "arrow_right.svg" %></h3>
</div>
<% end %>
<div class = "container account_history_index">
  <h2>BET SUGGESTIONS</h2>
  <% Bet.where(premade: true).each do |bet|%>
      <%= link_to premade_path(bet: bet) do %>
        <div class="premade-card" style="background-color: <%= ["#58587C", "#323244", "#696978", "#7A7AA1"].sample %>">
        <div class="premade-recipe">
        <p style="font-size: 20px"><%= bet.video_title %> will reach <strong><%= bet.metric_count %></strong>  <strong><%= bet.metric %></strong>  in the next <strong><%= bet.premade_days %>d</strong>  <strong><%= bet.premade_hours %>h</strong> .</p>
        </div>
        <div class="premade-arrow">
          <%= image_tag "arrow_right.svg" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<%= render 'shared/betbar' %>

