
<div class = "container account_settings_setting" >
	<h1>Settings</h1>
	<div class="setting-upperwrap d-flex">
		<div> <%= cl_image_tag current_user.avatar, alt: current_user.username, width: 60, height: 60, crop: :fill, class:" fixed-avatar", style:"object-fit: cover; border-radius: 50%;"%>
		</div>
		<div class="username-setting">
			<div><%= current_user.username %></div>
		</div>
	</div>
	<div class = "setting-links d-flex flex-column bd-highlight mb-3">
		<%= link_to "#", class: "wrap-link" do  %>
			<div class="link p-2 d-flex justify-content-between align-items-center bd-highlight"><p>About</p><%= image_tag "small_arrow_right.svg" %>
			</div>
		<% end %>

		<%= link_to friends_path, class: "wrap-link" do  %>
			<div class=" link p-2 d-flex justify-content-between align-items-center bd-highlight"><p>Add friends</p><%= image_tag "small_arrow_right.svg" %>
			</div>
		<% end %>

		<%= link_to "#", class: "wrap-link" do  %>
			<div class="link p-2 d-flex justify-content-between align-items-center bd-highlight"><p>Payment Settings</p><%= image_tag "small_arrow_right.svg" %>
			</div>
		<% end %>

		<%= link_to "#", class: "wrap-link" do  %>
			<div class=" p-2 d-flex justify-content-between align-items-center bd-highlight"><p>Start tutorial again</p><%= image_tag "small_arrow_right.svg" %>
			</div>
		<% end %>

    <%= link_to destroy_user_session_path, method: :delete, class: "wrap-link" do  %>
      <div class=" p-2 d-flex justify-content-between align-items-center bd-highlight"><p>Log out</p><%= image_tag "small_arrow_right.svg" %>
      </div>
    <% end %>
	</div>
</div>

<%= render 'shared/betbar' %>
