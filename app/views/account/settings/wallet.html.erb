<div class = "container account_settings_wallet">
	<h1>Wallet</h1>
	<p><%= image_tag "wallet.svg", size: "75" %> </p>
	<div class="wrap-amount d-flex justify-content-center align-items-center">
		<div class="wallet-icon" style="color:white"><%= image_tag "oddz_coin4.svg", size: "36"%></div>
		<div class="wallet-amount" style="color:white"><%= humanized_money(current_user.balance)%></div>
	</div>

	<div class="amount-form">
		<%= form_tag account_transactions_path do %>
    <div><%=text_field_tag 'amount', '', placeholder: 'Enter amount', autocomplete: 'off', id: 'wallet', required: true, inputmode:"numeric", pattern:"[0-9]*"%></div>
  </div>
  <div class="cash-buttons d-flex justify-content-evenly">
    <div class="btn-pay d-flex justify-content-center align-items-center"><%=submit_tag 'PAY-IN', id: 'submit-pay'%></div>
    <% end %>
    <div class="btn-white d-flex justify-content-center align-items-center">CASH-OUT</div>
  </div>

  <div class="settings-link d-flex flex-column bd-highlight mb-3">
    <%= link_to account_settings_path, class: "wrap-link" do  %>
    <div class="link d-flex justify-content-between align-items-center"><p>Back to Settings</p><%= image_tag "small_arrow_right.svg" %>
    </div>
    <% end %>
  </div>
</div>
