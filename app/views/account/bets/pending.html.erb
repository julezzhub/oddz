
<div class = "container account_invitations_pending">
	<% if current_user.bets.where(status: nil).empty? %>
		<h1><span><%= "No Bet Invitations" %></span></h1>
	<% else %>
		<h1><span><%= "Bet Invitations" %></span></h1>
		<div class="bet-status">
			<% @bets.each do |bet| %>
				<div class="bet-request" style="background-color: <%= ["#58587C", "#323244", "#696978", "#7A7AA1"].sample %>">
					<div class="request-upperwrap text-center">
						<%= cl_image_tag bet.friend.avatar, alt: bet.friend.username, width: 40, height: 40, crop: :fill, class:"avatar fixed-avatar", style:"object-fit: cover"%>
						<%= bet.friend.username %>
					</div>
						<div class="bet-content">
							<p>I bet you <strong>â‚¬<%=bet.stake%></strong>	that <strong><%= bet.target %></strong>  will reach <strong><%= bet.metric_count %> <%= bet.metric %></strong> in <strong><%= distance_of_time_in_words(bet.end_time - Time.now) %></strong></p>
						</div>
					<div class="status-change d-flex">
							<%= button_to "Accept", accept_bet_path(bet), method: :post, class:"status-option status-option-accept text-center", style:"width: 100%; border-right: none"%>
							<%= button_to "Reject", reject_bet_path(bet), method: :post,  class:"status-option status-option-reject text-center", style:"width: 100%; border-right: none"%>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
</div>
<%= render 'shared/betbar' %>
